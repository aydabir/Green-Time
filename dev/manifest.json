{
  "name": "GREEN TIME",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A browser plugin to help people better use their time",
  "homepage_url": "https://github.com/aydabir/Green-Time",
  "icons": {
    "16": "resources/img/icons/icon16.png",
    "48": "resources/img/icons/icon48.png",
    "128": "resources/img/icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "persistent": true,
    "scripts": [
      "resources/js/background.js"
    ]
  },
  "options_page": "resources/view/setting/index.html",
  "browser_action": {
    "default_icon": "resources/img/icons/icon19.png",
    "default_title": "Show Green Time Box",
    "default_popup": "resources/view/browser_action.html"
  },
  "permissions": [
    "contentSettings",
    "cookies",
    "tabs",
    "storage",
    "https://*/*,http://*/*"
  ],
  "content_scripts": [{
    "matches": [
      "https://*/*", "http://*/*"
    ],
    "css": [
      "resources/css/main.css"
    ],
    "js": [
      "resources/js/main.js"
    ]
  }]
}
